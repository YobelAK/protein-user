generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// ENUMS
// ===========================================

enum ProductType {
  BOAT_ROUTE
  TOUR_PACKAGE
  ATTRACTION
  RENTAL
}

enum BookingStatus {
  PENDING
  PAID
  EXPIRED
  CANCELLED
  REFUNDED
  COMPLETED
}

enum Role {
  SUPER_ADMIN
  TENANT_ADMIN
  TENANT_FINANCE
  TENANT_STAFF
  TENANT_OPERATOR
  CUSTOMER
}

enum Currency {
  IDR
  USD
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

// ===========================================
// CORE: TENANT, USER, & BUSINESS MANAGEMENT
// ===========================================

model Tenant {
  id String @id @default(uuid())

  // DATA VENDOR
  vendorName        String    @unique @map("vendor_name")
  ownerName         String?   @map("owner_name")
  email             String    @unique
  phoneNumber       String?   @map("phone_number")
  businessAddress   String?   @map("business_address")
  npwpBusinessId    String?   @unique @map("npwp_business_id")
  bankName          String?   @map("bank_name")
  accountNumber     String?   @map("account_number")
  contractStartDate DateTime  @map("contract_start_date")
  contractEndDate   DateTime? @map("contract_end_date")
  isActive          Boolean   @default(true)

  // PERFORMANCE METRICS
  totalBookings Int      @default(0) @map("total_bookings")
  averageRating Decimal? @map("average_rating") @db.Decimal(3, 2)

  // AUDIT FIELDS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?  @map("created_by")

  // RELATIONS
  users             User[]
  categories        TenantProductCategory[]
  products          Product[]
  bookings          Booking[]
  reviews           Review[]
  boats             Boat[]
  fastboatSchedules FastboatSchedule[]

  // INDEXES
  @@index([isActive, createdAt])
  @@map("tenants")
}

model User {
  id       String  @id
  email    String  @unique
  role     Role
  tenantId String?
  tenant   Tenant? @relation(fields: [tenantId], references: [id])

  // PROFILE FIELDS
  fullName    String?   @map("full_name")
  avatarUrl   String?   @map("avatar_url")
  dob         DateTime? @map("date_of_birth")
  nationality String?   @map("nationality")
  nationalId  String?   @map("national_id")
  currency    String?   @default("USD")
  language    String?   @default("en")

  // STATUS
  isActive Boolean @default(true)

  // AUDIT FIELDS
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime? @map("last_login_at")

  // RELATIONS
  bookings Booking[]
  reviews  Review[]

  // INDEXES
  @@index([email, isActive])
  @@index([tenantId, role])
  @@index([createdAt])
  @@index([nationalId])
  @@map("users")
}

model Category {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  icon        String? // Untuk UI/UX
  color       String? // Untuk branding
  sortOrder   Int     @default(0) @map("sort_order")
  isActive    Boolean @default(true)

  // AUDIT FIELDS
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenants  TenantProductCategory[]
  products Product[]

  // INDEXES
  @@index([isActive, sortOrder])
  @@map("categories")
}

model TenantProductCategory {
  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  isActive   Boolean  @default(true)
  assignedAt DateTime @default(now()) @map("assigned_at")
  assignedBy String?  @map("assigned_by")

  @@id([tenantId, categoryId])
  @@index([categoryId, isActive])
  @@map("tenant_product_categories")
}

// ===========================================
// PRODUK - POLYMORPHIC APPROACH (SIMPLIFIED)
// ===========================================

model Product {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  name        String
  description String?
  productType ProductType
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])

  imageUrls     String[] @map("image_urls")
  featuredImage String?  @map("featured_image")

  // PRICING
  priceIdr Decimal @map("price_idr") @db.Decimal(12, 2)
  priceUsd Decimal @map("price_usd") @db.Decimal(10, 2)
  isFree   Boolean @default(false) @map("is_free")

  // PERFORMANCE METRICS
  totalBookings Int      @default(0) @map("total_bookings")
  averageRating Decimal? @map("average_rating") @db.Decimal(3, 2)
  reviewCount   Int      @default(0) @map("review_count")

  // STATUS & AUDIT
  isActive   Boolean  @default(true)
  isFeatured Boolean  @default(false) @map("is_featured")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?  @map("created_by")

  // RELATIONS
  itineraries      TourItinerary?
  fastboatSchedule FastboatSchedule?
  inventory        Inventory[]
  bookingItems     BookingItem[]
  reviews          Review[]
  prices           ProductPrice[]

  // INDEXES
  @@index([tenantId, productType])
  @@index([categoryId, isActive])
  @@index([isActive, isFeatured])
  @@index([averageRating])
  @@index([createdAt])
  @@map("products")
}

model TourItinerary {
  id            String  @id @default(uuid())
  productId     String  @unique
  product       Product @relation(fields: [productId], references: [id])
  dayNumber     Int
  title         String
  description   String
  startTime     String? @map("start_time")
  endTime       String? @map("end_time")
  location      String?
  includedMeals String? @map("included_meals")
  notes         String?

  // ORDERING
  sortOrder Int @default(0) @map("sort_order")

  @@index([productId, dayNumber])
  @@index([productId, sortOrder])
  @@map("tour_itineraries")
}

model ProductPrice {
  id        String  @id @default(uuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])

  // PRICING
  priceIdr Decimal  @map("price_idr") @db.Decimal(12, 2)
  priceUsd Decimal  @map("price_usd") @db.Decimal(10, 2)
  currency Currency @default(IDR)

  // VALIDITY PERIOD
  validFrom DateTime  @map("valid_from")
  validTo   DateTime? @map("valid_to")
  isActive  Boolean   @default(true)

  // METADATA
  reason    String? // price_increase, promotion, seasonal, etc.
  createdAt DateTime @default(now())
  createdBy String?  @map("created_by")

  // INDEXES
  @@index([productId, isActive])
  @@index([validFrom, validTo])
  @@map("product_prices")
}

// ===========================================
// BOAT MANAGEMENT
// ===========================================

model Boat {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  // BOAT IDENTITY
  name               String
  registrationNumber String? @unique @map("registration_number")
  capacity           Int // Maximum passenger capacity

  // IMAGES
  imageUrls String[] @map("image_urls")

  // STATUS & AUDIT
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?  @map("created_by")

  // RELATIONS
  schedules FastboatSchedule[]

  // INDEXES
  @@index([tenantId, isActive])
  @@index([isActive, createdAt])
  @@map("boats")
}

// ===========================================
// FAST BOAT SCHEDULE MANAGEMENT
// ===========================================

model FastboatSchedule {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  departureRouteId String
  departureRoute   Route  @relation("DepartureRoute", fields: [departureRouteId], references: [id])
  arrivalRouteId   String
  arrivalRoute     Route  @relation("ArrivalRoute", fields: [arrivalRouteId], references: [id])

  boatId String?
  boat   Boat?   @relation(fields: [boatId], references: [id])

  departureTime String  @map("departure_time")
  arrivalTime   String? @map("arrival_time")

  capacity    Int
  description String?
  notes       String?

  productId String  @unique
  product   Product @relation(fields: [productId], references: [id])

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?  @map("created_by")

  @@index([tenantId, departureTime])
  @@index([departureRouteId, departureTime])
  @@index([arrivalRouteId, departureTime])
  @@map("fastboat_schedules")
}

// ===========================================
// FAST BOAT ROUTE MASTER
// ===========================================

model Route {
  id        String   @id @default(uuid())
  name      String   @unique
  image     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  departureSchedules FastboatSchedule[] @relation("DepartureRoute")
  arrivalSchedules   FastboatSchedule[] @relation("ArrivalRoute")

  @@index([isActive])
  @@map("routes")
}

// ===========================================
// INVENTORY & CAPACITY MANAGEMENT
// ===========================================

model Inventory {
  id        String  @id @default(uuid())
  tenantId  String
  productId String
  product   Product @relation(fields: [productId], references: [id])

  // DATE & CAPACITY
  inventoryDate  DateTime @db.Date
  totalCapacity  Int
  bookedUnits    Int      @default(0)
  availableUnits Int      @default(0) // Calculated field

  // PRICING OVERRIDE (optional)
  priceOverrideIdr Decimal? @map("price_override_idr") @db.Decimal(12, 2)
  priceOverrideUsd Decimal? @map("price_override_usd") @db.Decimal(10, 2)

  // OVERBOOKING SETTINGS
  allowOverbooking Boolean @default(false) @map("allow_overbooking")
  maxOverbookUnits Int     @default(0) @map("max_overbook_units")

  // STATUS
  isActive    Boolean @default(true)
  isAvailable Boolean @default(true) @map("is_available") // Manual toggle

  // AUDIT
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // RELATIONS
  bookingItems BookingItem[]

  // CONSTRAINTS & INDEXES
  @@unique([productId, inventoryDate], name: "unique_inventory_per_product_date")
  @@index([inventoryDate])
  @@index([tenantId, productId])
  @@index([isAvailable, inventoryDate])
  @@index([availableUnits])
  @@map("inventory")
}

// ===========================================
// BOOKING & PAYMENT SYSTEM
// ===========================================

model Booking {
  id       String @id @default(uuid())
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  customerId String
  customer   User   @relation(fields: [customerId], references: [id])

  // BOOKING INFO
  bookingDate DateTime      @default(now())
  bookingCode String        @unique @map("booking_code")
  currency    Currency
  totalAmount Decimal       @map("total_amount") @db.Decimal(12, 2)
  status      BookingStatus

  // XENDIT INTEGRATION FIELDS
  xenditInvoiceId      String?   @unique @map("xendit_invoice_id")
  paymentMethod        String?   @map("payment_method")
  xenditPaymentChannel String?   @map("xendit_payment_channel")
  paidAmount           Decimal?  @map("paid_amount") @db.Decimal(12, 2)
  invoiceExpiryDate    DateTime? @map("invoice_expiry_date")
  paidAt               DateTime? @map("paid_at")
  xenditCallbackData   Json?     @map("xendit_callback_data") // Raw callback data

  // CUSTOMER INFO (snapshot saat booking)
  customerName  String  @map("customer_name")
  customerEmail String  @map("customer_email")
  customerPhone String? @map("customer_phone")
  customerNotes String? @map("customer_notes")

  // OPERATIONAL FIELDS
  checkInDate  DateTime? @map("check_in_date")
  checkOutDate DateTime? @map("check_out_date")

  // AUDIT
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  cancelledAt        DateTime? @map("cancelled_at")
  cancelledBy        String?   @map("cancelled_by")
  cancellationReason String?   @map("cancellation_reason")

  // RELATIONS
  items  BookingItem[]
  review Review?

  // INDEXES
  @@index([customerId, status])
  @@index([tenantId, bookingDate])
  @@index([status, createdAt])
  @@index([bookingCode])
  @@index([xenditInvoiceId])
  @@index([invoiceExpiryDate])
  @@map("bookings")
}

model BookingItem {
  id        String  @id @default(uuid())
  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])

  inventoryId String?
  inventory   Inventory? @relation(fields: [inventoryId], references: [id])

  // ITEM DETAILS
  unitPrice Decimal  @map("unit_price") @db.Decimal(12, 2)
  quantity  Int
  itemDate  DateTime @map("item_date")
  subtotal  Decimal  @db.Decimal(12, 2)

  // CUSTOMER INFO SPECIFIC TO ITEM
  participantName     String? @map("participant_name")
  participantEmail    String? @map("participant_email")
  participantPhone    String? @map("participant_phone")
  specialRequirements String? @map("special_requirements")

  // STATUS
  isCancelled Boolean   @default(false) @map("is_cancelled")
  cancelledAt DateTime? @map("cancelled_at")

  // INDEXES
  @@index([bookingId, itemDate])
  @@index([productId, itemDate])
  @@index([inventoryId])
  @@map("booking_items")
}

// ===========================================
// REVIEWS & RATINGS
// ===========================================

model Review {
  id        String  @id @default(uuid())
  bookingId String  @unique
  booking   Booking @relation(fields: [bookingId], references: [id])

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  productId String
  product   Product @relation(fields: [productId], references: [id])

  customerId String
  customer   User   @relation(fields: [customerId], references: [id])

  // RATING & CONTENT
  rating  Int // 1-5
  title   String?
  comment String?

  // RATING BREAKDOWN (optional)
  serviceRating  Int? @map("service_rating")
  valueRating    Int? @map("value_rating")
  locationRating Int? @map("location_rating")

  // ðŸŒŸ SENTIMENT ANALYSIS & AI FIELDS ðŸŒŸ
  scoreSentiment Decimal? @map("score_sentiment") @db.Decimal(4, 3) // -1.000 to 1.000
  sentimentLabel String?  @map("sentiment_label") // positive, negative, neutral
  keyPhrases     String[] @map("key_phrases") // AI-extracted key phrases

  // METADATA
  reviewDate   DateTime @default(now()) @map("review_date")
  helpfulCount Int      @default(0) @map("helpful_count")
  reportCount  Int      @default(0) @map("report_count")

  // INDEXES
  @@index([productId, rating])
  @@index([tenantId, reviewDate])
  @@index([scoreSentiment])
  @@map("reviews")
}
